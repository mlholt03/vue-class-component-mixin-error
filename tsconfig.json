{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./",
    "baseUrl": "./src",
  },
  "exclude": [
      "bin",
      "node_modules",
      "storybook"
  ]
}
